---
// Navigation help component to explain smart navigation features
export const prerender = true;
---

<div id="nav-help-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-medium text-gray-900">Smart Navigation</h3>
                <button id="close-help" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
        
        <div class="px-6 py-4">
            <div class="space-y-4">
                <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h4 class="text-sm font-medium text-gray-900">Smart Logo Navigation</h4>
                        <p class="text-sm text-gray-600">Click the logo to go to your home: Landing page when signed out, Dashboard when signed in.</p>
                    </div>
                </div>
                
                <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h4 class="text-sm font-medium text-gray-900">Navigation Menu</h4>
                        <p class="text-sm text-gray-600">Use the navigation links to move between pages: Home and Dashboard (when signed in).</p>
                    </div>
                </div>
                
                <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h4 class="text-sm font-medium text-gray-900">Keyboard Shortcuts</h4>
                        <div class="text-sm text-gray-600 space-y-1">
                            <div class="flex items-center space-x-2">
                                <kbd class="px-2 py-1 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded">Ctrl</kbd>
                                <span>+</span>
                                <kbd class="px-2 py-1 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded">H</kbd>
                                <span>→ Home</span>
                            </div>
                            <div class="flex items-center space-x-2">
                                <kbd class="px-2 py-1 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded">Ctrl</kbd>
                                <span>+</span>
                                <kbd class="px-2 py-1 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded">D</kbd>
                                <span>→ Dashboard</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="px-6 py-4 bg-gray-50 rounded-b-lg">
            <p class="text-xs text-gray-500 text-center">
                These smart navigation features help you move around the app more efficiently.
            </p>
        </div>
        </div>
    </div>
</div>

<!-- Help trigger button -->
<button 
    id="nav-help-trigger"
    class="fixed bottom-4 right-4 bg-blue-600 hover:bg-blue-700 text-white p-3 rounded-full shadow-lg transition-colors z-40"
    title="Navigation Help (Press ? for shortcuts)"
>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
</button>

<script>
    // Help modal functionality
    const helpModal = document.getElementById('nav-help-modal');
    const helpTrigger = document.getElementById('nav-help-trigger');
    const closeHelp = document.getElementById('close-help');
    
    // Show help modal
    helpTrigger?.addEventListener('click', () => {
        helpModal?.classList.remove('hidden');
        helpModal?.classList.add('flex');
    });
    
    // Close help modal
    closeHelp?.addEventListener('click', () => {
        helpModal?.classList.add('hidden');
        helpModal?.classList.remove('flex');
    });
    
    // Close on outside click
    helpModal?.addEventListener('click', (e) => {
        if (e.target === helpModal) {
            helpModal.classList.add('hidden');
            helpModal.classList.remove('flex');
        }
    });
    
    // Keyboard shortcut to show help
    document.addEventListener('keydown', (e) => {
        if (e.key === '?' && !(e.target instanceof HTMLInputElement) && !(e.target instanceof HTMLTextAreaElement)) {
            e.preventDefault();
            helpModal?.classList.remove('hidden');
            helpModal?.classList.add('flex');
        }
        
        // Close help with Escape
        if (e.key === 'Escape') {
            helpModal?.classList.add('hidden');
            helpModal?.classList.remove('flex');
        }
    });
</script>
