---
import {
    SignedIn,
    SignedOut,
    UserButton,
    SignInButton,
} from "@clerk/astro/components";
---

<header class="bg-white shadow-sm fixed w-full top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-center h-16 items-center">
            <div class="w-full flex items-center justify-between">
                <div class="flex-shrink-0 flex items-center">
                    <a href="/" class="flex items-center gap-2">
                        <img
                            src="/favicon.svg"
                            alt="QR Boxes Logo"
                            class="h-8 w-8"
                        />
                        <span class="text-xl font-bold text-blue-700"
                            >QR Boxes</span
                        >
                    </a>
                </div>
                <nav
                    class="hidden md:flex items-center justify-center space-x-6"
                >
                    <a
                        href="#features"
                        class="text-gray-600 hover:text-blue-600 px-2 py-1 text-sm font-medium transition-colors"
                        >Características</a
                    >
                    <a
                        href="#how-it-works"
                        class="text-gray-600 hover:text-blue-600 px-2 py-1 text-sm font-medium transition-colors"
                        >Cómo funciona</a
                    >
                </nav>
                <div class="flex items-center">
                    <SignedOut>
                        <SignInButton
                            mode="modal"
                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
                        >
                            Iniciar sesión
                        </SignInButton>
                    </SignedOut>
                    <SignedIn>
                        <div class="flex items-center gap-4">
                            <a
                                href="/dashboard"
                                class="text-blue-600 hover:text-blue-800 font-medium transition-colors"
                            >
                                Dashboard
                            </a>
                            <UserButton />
                        </div>
                    </SignedIn>
                    <button
                        type="button"
                        class="md:hidden ml-4 text-gray-500 hover:text-gray-700 transition-colors"
                        aria-label="Menu"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                            ></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>
