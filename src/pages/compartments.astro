            content.innerHTML = '<div class="flex justify-center py-8"><div class="animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-green-500"></div></div>';

            const token = await this.getAuthToken();
            if (!token) {
                throw new Error('No authentication token available');
            }

            // Fetch compartment with members (single call)
            const response = await fetch(`${this.apiUrl}/api/compartments/members?compartmentId=${this.currentCompartmentId}`, {
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) {
                throw new Error('Failed to fetch compartment details');
            }

            const data = await response.json();
            console.log('Compartment data received:', data); // Debug log

            if (!data.success) {
                throw new Error(data.error || 'Failed to fetch compartment details');
            }

            // Extract compartment and members from the response
            const compartmentWithMembers = data.data;
            // Since Compartment is embedded, the compartment properties are at the top level
            const members = compartmentWithMembers.members || [];

            console.log('Compartment with members:', compartmentWithMembers); // Debug log
            console.log('Members:', members); // Debug log

            title.textContent = `Manage: ${compartmentWithMembers.name}`;
            this.renderManageContent(compartmentWithMembers, members);

        } catch (error) {
            console.error('Error showing manage modal:', error);
            const content = document.getElementById('manage-modal-content');
            if (content) {
                content.innerHTML = `
                    <div class="text-center py-8">
                        <p class="text-red-600">Failed to load compartment details</p>
                        <p class="text-sm text-gray-500 mt-2">Error: ${error instanceof Error ? error.message : 'Unknown error'}</p>
