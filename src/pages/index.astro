---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import HowItWorks from "../components/HowItWorks.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<Layout title="QR Boxes - Organiza tu mudanza con códigos QR" currentPage="home">
    <head slot="head">
        <meta
            name="description"
            content="Simplifica tu mudanza con QR Boxes. Crea etiquetas con códigos QR para tus cajas y accede fácilmente al inventario de cada una."
        />
        <!-- Open Graph para compartir en redes sociales -->
        <meta
            property="og:title"
            content="QR Boxes - Organiza tu mudanza con códigos QR"
        />
        <meta
            property="og:description"
            content="Simplifica tu mudanza con QR Boxes. Crea etiquetas con códigos QR para tus cajas y accede fácilmente al inventario de cada una."
        />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://qrboxes.com" />
        <meta property="og:image" content="https://qrboxes.com/og-image.jpg" />
        
        <!-- Fuentes y estilos -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
        
        <style is:global>
            html {
                scroll-behavior: smooth;
            }

            body {
                font-family: "Inter", sans-serif;
                background-color: white;
            }
        </style>
    </head>
    
    <main>
        <Hero />
        <HowItWorks />
    </main>
    <Footer />
</Layout>
